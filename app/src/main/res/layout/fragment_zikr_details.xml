<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ZikrDetails">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/click"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:visibility="visible">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/zikr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:lineSpacingExtra="15dp"
                android:textColor="@color/textColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"

                android:layout_margin="20dp"
                android:gravity="center|center_vertical"
                android:text="-------------------------------------"
                android:textColor="@color/textColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/narriated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="20dp"
                android:gravity="center|center_vertical"
                android:lineSpacingExtra="15dp"
                android:textColor="@color/narriated"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/like1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:visibility="invisible"
            android:src="@drawable/like" />
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:padding="5dp"
            android:layout_marginRight="80dp"
            android:layout_weight="1"
            android:gravity="center"

            >

            <com.example.girass.CircularProgressBar
                android:id="@+id/progress"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:progress="0"

                app:progressBarThickness="5dp" />


            <TextView
                android:id="@+id/counting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="41dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/repeating" />

            <TextView
                android:id="@+id/time_repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>