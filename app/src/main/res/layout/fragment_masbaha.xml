<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/tasbih_layout"
    android:layout_height="match_parent"
    android:background="@drawable/subha_back"
    android:orientation="vertical"
    tools:context=".MasbahaFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/choose_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25sp"

            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/choose_icon1" />


        <ImageButton
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layoutDirection="ltr"
            android:padding="10dp"
            android:src="@drawable/reset_icon" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/third_zikr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sec_zikr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center"
            android:textColor="@color/secondText"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fisrt_zikr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"

            android:fontFamily="@font/tajawal_regular"
            android:gravity="center"
            android:singleLine="true"

            android:textColor="@color/firstText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/no_tasbih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/secondText"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>



        <ImageButton
            android:id="@+id/subha_btn"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/subha_b" />

</LinearLayout>